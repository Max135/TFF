include mixins/base

html
    head
        meta(charset="utf8-8")
        title=title
        link(href="/stylesheets/main.css" rel="stylesheet")
        link(href="/stylesheets/style.css" rel="stylesheet")
    body

    .backgroundGrid
        video.loginVideo(autoplay muted loop)
            source(src="/stylesheets/video/burning.mp4" type="video/mp4")

    .container.loginContainer.d-flex.justify-content-center
        .login.p-2
            h2.loginTitle="Signup"
            +flash
            +form("post", "/signup")
                .form-group
                    .form-label-group.formField
                        input(type="text" name="email" class="form-control login-form-border" placeholder="email" style="padding-left:33px;")
                    br
                    .form-label-group.formField
                        input(type="text" name="username" class="form-control login-form-border" placeholder="username" style="padding-left:33px;")
                    br
                    .form-label-group.formField
                        input(type="password" name="password" class="form-control login-form-border" placeholder="password" style="padding-left:33px;")
                    br
                    .form-label-group.formField
                        input(type="password" name="passwordConfirmation" class="form-control login-form-border" placeholder="password confirmation" style="padding-left:33px;")
                    br
                    button.btn.btn-sm.btn-succes.text-uppercase.form-button(type="submit" class="form-button") Signup