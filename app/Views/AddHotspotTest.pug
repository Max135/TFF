include mixins/base

html
  head
    meta(charset="utf8-8")
    title=title
    link(href="/stylesheets/main.css" rel="stylesheet")
    link(href="/stylesheets/style.css" rel="stylesheet")
  body

  .backgroundGrid
    video.loginVideo(autoplay muted loop)
      source(src="/stylesheets/video/video.mp4" type="video/mp4")

  .container.loginContainer.d-flex.justify-content-center
    .login.p-2
      h2.loginTitle="Hotspot"
      +flash
      +form("post", "/testHotspot")
        .form-group
          .form-label-group.formField
            input(id="lon" type="text" name="lon" class="form-control login-form-border" placeholder="lon" style="padding-left:33px;color:black;")
          br
          .form-label-group.formField
            input(id="lat" type="text" name="lat" class="form-control login-form-border" placeholder="lat" style="padding-left:33px;color:black;")
          br
          .form-inline.justify-content-between
            a.signupLink.p-2(href="/map") Map
            button.btn.btn-sm.form-button.text-uppercase Save