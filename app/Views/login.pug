include mixins/base

html
  head
    meta(charset="utf8-8")
    title=title
    link(href="/stylesheets/main.css" rel="stylesheet")
    link(href="/stylesheets/style.css" rel="stylesheet")
  body

  .backgroundGrid
    video.loginVideo(autoplay muted loop)
      source(src="/stylesheets/video/burning.mp4" type="video/mp4")

  .container.loginContainer.d-flex.justify-content-center
    .login.p-2
      h2.loginTitle="Login"
      +flash
      +form("post", "/login")
        .form-group
          .form-label-group.formField
            input(id="id_email" type="text" name="email" class="form-control login-form-border" placeholder="email" style="padding-left:33px;").formField
          br
          .form-label-group.formField
            input(id="id_password" type="password" name="password" class="form-control login-form-border" placeholder="password" style="padding-left:33px;").formField
          br
          .form-inline.justify-content-between
            a.signupLink.p-2(href="/signup") Signup
            button.btn.btn-lg.form-button.text-uppercase Login

